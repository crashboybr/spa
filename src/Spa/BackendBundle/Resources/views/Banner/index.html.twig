{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PageBanner list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Pic</th>
                <th>Url</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td><img src="{{ asset(entity.pic) }}" style="width: 98px;"> </td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.type }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('banners_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('banners_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('banners_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
