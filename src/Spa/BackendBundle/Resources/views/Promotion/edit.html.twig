{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Promoção › Editar</h1>

    <ul class="record_actions">
		<li><a href="{{ path('promocao') }}"><i class="icon-arrow-left"></i> Voltar para lista</a></li>
	</ul>

	{{ form_start(edit_form) }}

		<div>
			{{ form_label(edit_form.name,'Nome') }}
			{{ form_errors(edit_form.name) }}
			{{ form_widget(edit_form.name) }}
		</div>

		<div>
			{{ form_label(edit_form.description,'Descrição') }}
			{{ form_errors(edit_form.description) }}
			{{ form_widget(edit_form.description) }}
		</div>

		<div>
			{{ form_label(edit_form.file, 'Imagem') }}

			<span class="boxImagem"><img src="{{ asset(entity.pic) }}" style="width: 98px;"><a href="#" class="alterarImagem"></span>

			{{ form_errors(edit_form.file) }}
			{{ form_widget(edit_form.file) }}
		</div>

		<div>
			{{ form_label(edit_form.fixed,'Campanha Fixa') }}
			{{ form_errors(edit_form.fixed) }}
			{{ form_widget(edit_form.fixed) }}
		</div>

		<ul class="botoes">
			<li>
				{{ form_widget(edit_form.save)}}
				
			</li>
			<li>
				{{ form_widget(edit_form.save_and_publish) }}
			</li>
		</ul>
		<ul class="record_actions">
			<li><a href="{{ path('promocao') }}"><i class="icon-arrow-left"></i> Voltar para lista</a></li>
		</ul>
	{{ form_end(edit_form) }}
{% endblock %}
