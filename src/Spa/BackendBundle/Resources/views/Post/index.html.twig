{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Notícias › Itens</h1>
    <ul class="botoes">
            <li><a href="{{ path('noticias_new') }}" class="botaoCriar"><i class="icon-plus"></i> Inserir nova notícia</a></li>
        </li>
    </ul>
    <table class="records_list">
        <thead>
            <tr>
                <th>Ações</th>
                <th>Título</th>
                <th>Imagem</th>
                <th>Criado</th>
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <ul class="ordenacao">
                        <li><i class="icon-arrow-up disabled"></i></li>
                        <li><a href="#" title="mover para baixo"><i class="icon-arrow-down"></i></a></li>
                        <li><a href="{{ path('noticias_edit', { 'id': entity.id }) }}" title="visualizar"><i class="icon-eye-open"></i></a></li>
                        <li><a href="{{ path('noticias_edit', { 'id': entity.id }) }}" title="editar"><i class="icon-edit"></i></a></li>
                        <li><a href="#" title="apagar"><i class="icon-trash"></i></a></li>

                    </ul>
                
                </td>
                <td><a href="{{ path('noticias_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td><img src='{{ asset(entity.pic) }}' style="width: 44px;" /></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('d/m/Y') }}{% endif %}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul class="botoes">
            <li><a href="{{ path('noticias_new') }}" class="botaoCriar"><i class="icon-plus"></i> Inserir nova notícia</a></li>
        </li>
    </ul>
    {% endblock %}
