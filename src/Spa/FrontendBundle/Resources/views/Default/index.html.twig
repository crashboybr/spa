{% extends 'SpaFrontendBundle::layout.html.twig' %}
{% block body_class %}home{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    	'@SpaFrontendBundle/Resources/public/js/responsiveslides.min.js'
 	%}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}

		
<script>
$(function () {
  $("#slider").responsiveSlides({
	auto: true,
	timeout: 10000,
	nav: true,
	speed: 500,
  });

  

});

$(document).ready(function() {
	$('.linkVideo').fancybox({
		openEffect  : 'none',
		closeEffect : 'none',
		helpers : {
			media : {}
		}
	});
});
</script>
<div class="sliderContainer">
<div class="sliderSombra"></div>
<ul class="rslides" id="slider">
	{% for slider in sliders %}

	<li>
		<a href="{{ slider.url }}">
			<img src="{{ slider.pic | apply_filter('banner_slider') }}" />
		</a>
	</li>
	{% endfor %}
	
</ul>
<hr class="fim" />
</div>

		<div class="homeCols">
		<div class="home col1">
			<div class="destaques">
				<h4><span>Destaques</span></h4>
				<hr class="destaquesLinha" />
				<div class="destaquesBanners">
					<div class="destaqueDireita">
						<ul>
							{% for banner in bannersduplo %}
							<li>
								<a href="{{ banner.url }}">
									<img src="{{ banner.pic | apply_filter('banner_double') }}" />
									<span class="texto">
										<span class="titulo">{{ banner.title }}</span>
										<span class="descricao">{{ banner.description }}</span>
									</span>
									<hr class="fim" />
								</a>
							</li>
							{% endfor %}
						</ul>
					</div>
					<div class="destaqueEsquerda">
						<h5>{{ bannersimples.title }}</h5>
						<img src="{{ bannersimples.pic |  apply_filter('banner_simple')}}" />
						<a href="{{ bannersimples.url }}"><span>saiba mais</span></a></div>
					<hr class="fim" />
				</div>
			</div>
			<div id="homeRedesSociais">
				<h4>O Spa nas Redes Sociais</h4>
				<div class="boxesContainer">
					<iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2FSdaSobrancelhas&amp;width=500&amp;height=258&amp;colorscheme=light&amp;show_faces=true&amp;header=false&amp;stream=false&amp;show_border=false" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100%; height:210px;padding-top:.5em;" allowTransparency="true"></iframe>
					<hr class="fim" />
				</div>
			</div>
		</div>
		
		<div class="home col2">
			<div class="localizeUnidade">
				<h4>Localize uma unidade Spa das Sobrancelhas</h4>
				<div class="boxesContainer">
					<form>
						<select id="estado" onchange="buscaEstado()">
							<option value="" selected="selected">Selecione seu Estado</option>
							<option value="AC">Acre</option>
							<option value="AL">Alagoas</option>
							<option value="AP">Amapá</option>
							<option value="AM">Amazonas</option>
							<option value="BA">Bahia</option>
							<option value="CE">Ceará</option>
							<option value="DF">Distrito Federal</option>
							<option value="ES">Espírito Santo</option>
							<option value="GO">Goiás</option>
							<option value="MA">Maranhão</option>
							<option value="MT">Mato Grosso</option>
							<option value="MS">Mato Grosso do Sul</option>
							<option value="MG">Minas Gerais</option>
							<option value="PA">Pará</option>
							<option value="PB">Paraíba</option>
							<option value="PR">Paraná</option>
							<option value="PE">Pernambuco</option>
							<option value="PI">Piauí</option>
							<option value="RJ">Rio de Janeiro</option>
							<option value="RN">Rio Grande do Norte</option>
							<option value="RS">Rio Grande do Sul</option>
							<option value="RO">Rondônia</option>
							<option value="RR">Roraima</option>
							<option value="SC">Santa Catarina</option>
							<option value="SP">São Paulo</option>
							<option value="SE">Sergipe</option>
							<option value="TO">Tocantins</option>
						</select>
						<select id="cidades" onchange="buscaCidade()" style="display:none;" name="cidades"><option value="" selected="selected"></option></select>
						<div id="nocity" style="display:none; text-align: center; color: white">Não existe unidade disponível para este estado</div>
						<div id="div_carregando" style="display:none; text-align: center;"><img src="{{ asset('bundles/spafrontend/images/carregando.gif') }}"></div>
					</form>
				</div>
			</div>
			
			{{ render(controller('SpaFrontendBundle:Default:bannerRight')) }}
			
			<div class="homeVideoDestaque">
				<h4>Vídeo em Destaque</h4>
				<div class="boxesContainer">
					<a class="linkVideo" href="{{ featured_video.url }}"><img src="http://img.youtube.com/vi/{{ youtube_id }}/0.jpg"></a>
					<!--<iframe width="336" height="187" src="{{ featured_video.getUrl | replace({'watch?v=': 'embed/'}) }}" frameborder="0" allowfullscreen></iframe>-->
					<span>[+]</span> Veja mais vídeos</a></div>
			</div>
		</div>
		<hr class="fim" />
		</div>

{% endblock %}
