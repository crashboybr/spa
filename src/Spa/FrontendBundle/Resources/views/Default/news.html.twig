{% extends 'SpaFrontendBundle::layout.html.twig' %}

{% block body_class %}noticias{% endblock %}
{% block body %}

<h2>Notícias</h2>
		<hr class="titulo" />
		<div class="c02">
			<div class="colConteudo">
				<ul class="noticia-lista">
					{% for post in posts %}
					<li>
						<a href="{{ path('spa_frontend_view_post', { 'post': post.id }) }}">
							<span class="noticia-data">{{ post.createdAt|date('d/m/Y') }}</span>
							<span class="noticia-titulo">{{ post.title }}</span>
						</a>
					</li>
					{% endfor %}
				</ul>
			</div>
			<div class="colBanners">
				<div class="bannerInterno"><img src="/_imgs/banner-unidades.jpg" /><h4>Unidades elegantes e confortáveis</h4><a href="#"><span>Saiba mais</span></a></div>
				<div class="bannerInterno"><img src="/_imgs/banner-avaliacao_gratuita.jpg" /><h4>Agende já a sua avaliação gratuita</h4><a href="#"><span>Saiba mais</span></a></div>
			</div>
			<hr class="fim" />
		</div>

{% endblock %}


